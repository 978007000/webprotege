<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeResourceBundle"/>

    <g:HTMLPanel addStyleNames="web-protege-laf {wp.css.formMain}">

        <g:Label addStyleNames="{wp.css.formLabel}">Current password</g:Label>
        <g:PasswordTextBox ui:field="oldPasswordField" visibleLength="60"/>

        <div style="height: 20px;"/>

        <g:HTMLPanel addStyleNames="{wp.css.formGroup}">
            <g:Label addStyleNames="{wp.css.formLabel}">New password</g:Label>
            <g:PasswordTextBox ui:field="newPasswordField" visibleLength="60"/>
        </g:HTMLPanel>


        <g:HTMLPanel addStyleNames="{wp.css.formGroup}">
            <g:Label addStyleNames="{wp.css.formLabel}">Confirm new password</g:Label>
            <g:PasswordTextBox ui:field="confirmNewPasswordField" visibleLength="60"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>
