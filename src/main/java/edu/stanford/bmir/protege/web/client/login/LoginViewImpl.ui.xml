<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .main {
        }

        .center {
            margin-top: 50px;
            margin-left: auto;
            margin-right: auto;
            /*width: 400px;*/
            padding: 0;
            overflow: auto;
            bottom: 0;
            top: 0;
            color: #606060;
        }

        .centerPanel {
            max-width: 250px;
        }

        .message {
            width: 180px;
            margin-left: auto;
            margin-right: auto;
            padding-top: 20px;
            padding-bottom: 15px;
            font-size: 14px;
        }

        .bottomBar {
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        .forgotPasswordButton {
            color: blue;
            text-decoration: underline;
            padding-top: 20px;
            padding-right: 0;
        }

        .logoContainer {
            width: 200px;
            margin-left: auto;
            margin-right: auto;
        }
        .logo {
            width: 200px;
            height: auto;
            position: relative;
            left: -20px;
        }
        .signup {
            float: right;
            margin: 3px;
            padding-right: 20px;
            padding-left: 20px;
        }
        .signin {
            width: 100%;
        }
    </ui:style>


        <g:HTMLPanel addStyleNames="{style.main}">
            <g:Button text="Sign Up For Account" ui:field="signUpForAccountButton" addStyleNames="{style.signup} {wp.buttons.btn} {wp.buttons.btnE}"/>
            <g:HTMLPanel addStyleNames="{style.center}">
                <g:HTMLPanel addStyleNames="{style.logoContainer}">
                    <g:Image resource="{wp.protegeBlender}" addStyleNames="{style.logo}"/>
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.message}">
                    Please sign in to continue
                </g:HTMLPanel>

                <g:HTMLPanel addStyleNames="{wp.dialog.dialog} {style.centerPanel}">
                        <g:Label text="Username"/>
                        <g:TextBox ui:field="userNameField" visibleLength="30"/>
                        <g:Label text="Password"/>
                        <g:PasswordTextBox ui:field="passwordField" visibleLength="30"/>
                        <div style="height: 20px;"/>
                        <g:Button ui:field="signInButton" text="Sign In"
                                  addStyleNames="{wp.buttons.btn} {wp.buttons.btnB} {style.signin}"/>
                    <g:HTMLPanel addStyleNames="{style.bottomBar}">
                        <g:Anchor text="Forgot user name or password" ui:field="forgotPasswordButton"
                                  addStyleNames="{style.forgotPasswordButton}"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>


        </g:HTMLPanel>

</ui:UiBinder>