<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            display: inline-block;
            width: 12px;
            cursor: pointer;
        }

        .topBar {
            background: #707070;
            height: 2px;
            width: 100%;
            margin-bottom: 2px;
        }

        .middleBar {
            background: #707070;
            height: 2px;
            width: 100%;
            margin-bottom: 2px;
        }

        .bottomBar {
            background: #707070;
            height: 2px;
            width: 100%;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" title="Menu" ui:field="main">
        <g:HTMLPanel  addStyleNames="{style.topBar}"/>
        <g:HTMLPanel  addStyleNames="{style.middleBar}"/>
        <g:HTMLPanel  addStyleNames="{style.bottomBar}"/>
    </g:HTMLPanel>
</ui:UiBinder>