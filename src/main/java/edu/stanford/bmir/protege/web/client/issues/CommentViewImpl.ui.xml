<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:timelabel="urn:import:edu.stanford.bmir.protege.web.client.ui.library.timelabel"
>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: block;
            border-bottom: 1px solid #f0f0f0;
            margin-bottom: 10px;
        }
        .main:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }
        .author {
            padding-bottom: 2px;
        }

        .date {
            font-size: 10px;
            color: #B3B3B3;
            padding-left: 2px;
            display: inline;
        }

        .body {
            color: #676767;
            border: none;
            padding-left: 30px;
            padding-top: 3px;
        }

        .links:hover {
            color: #648dbe !important;
        }

        .iconHolder {
            display: inline-block;
            padding-right: 1px;
            vertical-align: middle;
        }

        .rightBox {
            display: inline-block;
            vertical-align: middle;
        }
        .buttonBar {
            display: flex;
            justify-content: flex-end;
        }
        .replyButton {

        }
        .editButton {

        }
        .deleteButton {

        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimplePanel ui:field="userIconField" addStyleNames="{style.iconHolder}" debugId="iconHolder"/>
        <g:HTMLPanel addStyleNames="{style.rightBox}">
            <g:Label ui:field="userNameField" addStyleNames="{style.author}" debugId="userNameField"/>
            <timelabel:ElapsedTimeLabel ui:field="createdAtField" addStyleNames="{style.date}"/>
        </g:HTMLPanel>
        <g:HTML ui:field="bodyField" addStyleNames="{style.body}" debugId="bodyField"/>
        <g:HTMLPanel addStyleNames="{style.buttonBar}">
            <g:Button text="Reply" ui:field="replyButton"
                      addStyleNames="{wp.buttons.toolbarButton} {style.replyButton}"/>
            <g:Button text="Edit" ui:field="editButton"
                      addStyleNames="{wp.buttons.toolbarButton} {style.editButton}"/>
            <g:Button text="Delete" ui:field="deleteButton"
                      addStyleNames="{wp.buttons.toolbarButton} {style.deleteButton}"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>