<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            width: 100%;
        }
        .image {
            max-height: 100px;
            width: auto;
        }
        .placeHolder {
            color: #c0c0c0;
            border: 2px dashed #c0c0c0;
            border-radius: 6px;
            margin: 2px;
            height: 2em;
            padding: 5px;
            text-align: center;
            line-height: 2em;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" ui:field="container">
        <g:Label ui:field="placeHolder" text="Click to add image" addStyleNames="{style.placeHolder}"/>
        <g:Image ui:field="imageField" addStyleNames="{style.image}"/>
    </g:HTMLPanel>
</ui:UiBinder>