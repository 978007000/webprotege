<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gwtcodemirror="urn:import:edu.stanford.bmir.gwtcodemirror.client"
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.ui.library.text">
    <ui:style>
        .main {
            position: absolute;
            height: 100%;
            width: 100%;
        }

        .editor {
            position: absolute;
            width: 100%;
            top: 0;
            height: 4em;
            border: 1px solid #f0f0f0;
            box-sizing: border-box;
        }


        .buttonPanel {
            position: absolute;
            left: 0;
            right: 0;
            top: 4em;
            height: 2em;
            padding: 2px;
            box-sizing: border-box;
        }

        .executeButton {
            /*position: absolute;*/
            /*right: 0;*/
            /*top: 0;*/
            /*width: auto;*/
            /*height: auto;*/
            float: right;
        }

        .answersSummaryBar {
            position: absolute;
            top: 7em;
            height: 2em;
            left: 0;
            right: 0;
            color: #5F5F5F;
            padding-left: 5px;
        }

        .results {
            position: absolute;
            left: 10px;
            right: 2px;
            top: 9em;
            bottom: 0;
            box-sizing: border-box;
            border-top: 1px solid #f1f1f1;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}" styleName="web-protege-laf">
        <g:HTMLPanel addStyleNames="{style.editor}">
            <gwtcodemirror:GWTCodeMirror ui:field="editor" width="100%" height="100%"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.buttonPanel}">
            <text:PlaceholderTextBox placeholder="Filter" visibleLength="20" ui:field="filterField" visible="false"/>
            <g:Button text="Execute query" ui:field="executeQueryButton" addStyleNames="{style.executeButton}" styleName="button-style"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.answersSummaryBar}">
            <g:Label ui:field="revisionNumberField"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.results}">
            <g:ScrollPanel width="100%" height="100%">
                <g:HTML ui:field="resultsDisplay"/>
            </g:ScrollPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
