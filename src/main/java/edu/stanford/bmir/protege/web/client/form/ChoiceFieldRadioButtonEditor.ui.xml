<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @external gwt-RadioButton;

        .radioButtonContainer {
            padding: 2px;
        }
        .radioButtonContainer .gwt-RadioButton {
            margin: 3px;
        }
        .radioButtonContainer label {
            border: 1px solid transparent;
        }
        .radioButtonContainer label :focus {
            border: 1px solid #0A5EA8;
        }
    </ui:style>
    <g:HTMLPanel ui:field="container" addStyleNames="{style.radioButtonContainer}">

    </g:HTMLPanel>
</ui:UiBinder>