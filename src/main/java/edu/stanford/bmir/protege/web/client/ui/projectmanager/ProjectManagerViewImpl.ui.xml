<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:projectlist="urn:import:edu.stanford.bmir.protege.web.client.ui.projectlist">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            margin: 5px;
        }

        .buttonBar {
            flex-grow: 0;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 5px;
            margin-bottom: 5px;
        }

        .projectList {
            flex-grow: 100;
        }

        .loggedInUserView {
            float: right;
        }

    </ui:style>



    <g:HTMLPanel addStyleNames="{style.main}">

        <g:HTMLPanel addStyleNames="{style.buttonBar}">
            <g:Button ui:field="createProjectButton" text="&#x2600; Create Project ..." enabled="false" addStyleNames="{wp.buttons.btn} {wp.buttons.btnInline}"/>
            <g:Button ui:field="uploadProjectButton" text="&#x21ea; Upload Project ..." addStyleNames="{wp.buttons.btn} {wp.buttons.btnInline}"/>
            <g:SimplePanel ui:field="loggedInUserButton" addStyleNames="{style.loggedInUserView}"/>
        </g:HTMLPanel>
        <g:SimpleLayoutPanel addStyleNames="{style.projectList}">
            <projectlist:ProjectListViewImpl ui:field="projectListView"/>
        </g:SimpleLayoutPanel>


    </g:HTMLPanel>
</ui:UiBinder>
