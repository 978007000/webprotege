<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>

        .top-bar-style {
            position: absolute;
            top: 0;
            height: 24px;
            left: 0;
            right: 0;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .usage-grid-style {
            position: absolute;
            top: 24px;
            bottom: 0;
            left: 0;
            right: 0;
        }
    </ui:style>
    <g:HTMLPanel width="100%" height="100%">
        <g:Label ui:field="filterMessage" visible="false" addStyleNames="{wp.style.warningLabel} {style.top-bar-style}" text="Results are filtered"/>
        <g:HTMLPanel styleName="{style.usage-grid-style}">
            <cellview:DataGrid ui:field="dataGrid" width="100%" height="100%"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
