<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:portlet="urn:import:edu.stanford.bmir.protege.web.client.portlet"
             xmlns:popupmenu="urn:import:edu.stanford.bmir.protege.web.client.ui.library.popupmenu">

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .parent {
            position: absolute;
        }
        .toolbar {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 22px;
            box-sizing: border-box;
            overflow: hidden;
        }
        .contentHolder {
            position: absolute;
            top: 23px;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .menuButton {
            padding-right: 2px;
            float: right;
            padding-top: 2px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.parent}">
        <g:FlowPanel ui:field="toolbar" addStyleNames="{style.toolbar} {wp.style.portletToolbar}">
            <popupmenu:MenuButton ui:field="menuButton" addStyleNames="{style.menuButton}"/>
        </g:FlowPanel>
        <portlet:PortletContentHolder ui:field="contentHolder" addStyleNames="{style.contentHolder}"/>
    </g:HTMLPanel>
</ui:UiBinder>