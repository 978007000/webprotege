<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .main {
            padding-top: 1px;
            background: #f0f0f0;
            height: 24px;
        }
        .rightPanel {
            float: right;
        }
        .inline {
            display: inline-block;
            vertical-align: middle;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.inline}">
            <g:SimplePanel ui:field="homeContainer"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.rightPanel}">
            <g:SimplePanel ui:field="sharingSettingsContainer" addStyleNames="{style.inline}"/>
            <g:SimplePanel ui:field="loggedInUserContainer" addStyleNames="{style.inline}"/>
            <g:SimplePanel ui:field="helpContainer" addStyleNames="{style.inline}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>