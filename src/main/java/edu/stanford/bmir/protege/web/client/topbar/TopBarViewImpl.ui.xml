<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            padding-top: 1px;
            background: #f0f0f0;
            height: 24px;
        }
        .rightPanel {
            float: right;
        }
        .inline {
            display: inline-block;
            vertical-align: middle;
        }
        .logo {
            width: 20px;
            height: 20px;
            display: inline;
            padding-left: 1px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.inline}">
            <g:Image resource="{wp.protegeBlender}" addStyleNames="{style.logo} {style.inline}"/>
            <g:SimplePanel ui:field="homeContainer" addStyleNames="{style.inline}"/>
            <g:SimplePanel ui:field="projectMenuContainer" addStyleNames="{style.inline}"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.rightPanel}">
            <g:SimplePanel ui:field="sharingSettingsContainer" addStyleNames="{style.inline}"/>
            <g:SimplePanel ui:field="loggedInUserContainer" addStyleNames="{style.inline}"/>
            <g:SimplePanel ui:field="helpContainer" addStyleNames="{style.inline}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>