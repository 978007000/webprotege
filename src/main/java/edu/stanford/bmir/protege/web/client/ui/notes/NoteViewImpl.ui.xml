<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:timelabel="urn:import:edu.stanford.bmir.protege.web.client.ui.library.timelabel"
        >

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>

        .author {
            padding-bottom: 2px;
        }

        .date {
            font-size: 10px;
            color: #B3B3B3;
            padding-left: 2px;
            display: inline;
        }

        .body {
            color: #676767;
            border: none;
            padding-left: 28px;
            padding-top: 1px;
        }

        .links:hover {
            color: #648dbe !important;
        }

        .iconHolder {
            display: inline-block;
            padding-right: 1px;
        }
    </ui:style>


    <g:HTMLPanel>
        <!--<g:Image resource="{wp.userIcon}"/>-->
        <g:SimplePanel ui:field="iconHolder" addStyleNames="{style.iconHolder}"/>
        <g:InlineLabel addStyleNames="{style.author} {wp.style.userName}" ui:field="authorField"/>
        <timelabel:ElapsedTimeLabel addStyleNames="{style.date}" ui:field="dateField"/>
        <g:HTML addStyleNames="{style.body}" ui:field="bodyField"/>
    </g:HTMLPanel>
</ui:UiBinder>
