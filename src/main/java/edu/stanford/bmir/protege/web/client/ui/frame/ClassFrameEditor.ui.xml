<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:wp='urn:import:edu.stanford.bmir.protege.web.client.ui.frame'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeResourceBundle"/>

    <g:HTMLPanel styleName="web-protege-laf" addStyleNames="{wp.css.formMain}">

        <div class="{wp.css.formGroup}">
            <g:Label text="Display name" addStyleNames="{wp.css.formLabel}"/>
            <g:TextBox ui:field="displayNameField" width="100%"/>
        </div>

        <div class="{wp.css.formGroup}">
            <g:Label text="IRI" addStyleNames="{wp.css.formLabel}"/>
            <g:TextBox ui:field="iriField" width="100%"/>
        </div>


        <div style="height: 30px;"/>

        <g:Label text="Annotations" addStyleNames="{wp.css.formLabel}"/>
        <wp:PropertyValueListEditor ui:field="annotations"/>

        <div style="height: 30px;"/>

        <g:Label text="Properties" addStyleNames="{wp.css.formLabel}"/>
        <wp:PropertyValueListEditor ui:field="properties"/>

    </g:HTMLPanel>
</ui:UiBinder>
